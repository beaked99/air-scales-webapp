{% extends 'base.html.twig' %}

{% block title %}Pre-Order AirScales{% endblock %}

{% block body %}
  <div class="min-h-screen flex flex-col">
    {% include '_header.html.twig' %}
    <!-- Order Form -->
    <section class="container mx-auto px-6 py-12 max-w-3xl">
    <h1 class="text-4xl font-bold text-white mb-4">Pre-Order Your AirScales</h1>
    <p class="text-gray-400 mb-8">Complete your order and we will ship your device within 3-5 months.</p>

    {% if app.user %}
      <div class="bg-blue-900/30 border border-blue-500 rounded-lg p-4 mb-8">
        <p class="text-blue-400">
          <i class="fas fa-info-circle mr-2"></i>Signed in as <strong>{{ app.user.email }}</strong>
        </p>
      </div>
    {% endif %}

    <form method="POST" action="{{ path('order_checkout') }}" class="bg-gray-800 rounded-lg border border-gray-700 p-8">
      {% if not app.user %}
        <!-- Guest Information -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-white mb-4">Your Information</h2>
          <p class="text-gray-400 mb-6 text-sm">
            Already have an account? <a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300">Sign in</a>
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-semibold text-gray-300 mb-2">Name</label>
              <input type="text" name="name" required class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="John Smith">
            </div>
            <div>
              <label class="block text-sm font-semibold text-gray-300 mb-2">Email</label>
              <input type="email" name="email" required class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="you@example.com">
            </div>
          </div>
        </div>
      {% endif %}
        <!-- Device Configuration -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-white mb-6">Device Configuration</h2>

          <div class="grid md:grid-cols-2 gap-6">
            <!-- Single Sensor -->
            <label class="cursor-pointer">
              <input type="radio" name="device_type" value="single" {% if device_type == 'single' %}checked{% endif %} class="hidden peer">
              <div class="bg-gray-900 border-2 border-gray-700 peer-checked:border-blue-500 rounded-lg p-6 transition hover:border-gray-600">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-xl font-bold text-white">Single Sensor</h3>
                  <i class="fas fa-gauge text-3xl text-blue-400"></i>
                </div>
                <p class="text-gray-400 text-sm mb-4">Monitor one axle group</p>
                <div class="text-blue-400 font-semibold text-2xl">$150 <span class="text-sm text-gray-400">USD</span></div>
              </div>
            </label>

            <!-- Dual Sensor -->
            <label class="cursor-pointer">
              <input type="radio" name="device_type" value="dual" {% if device_type == 'dual' %}checked{% endif %} class="hidden peer">
              <div class="bg-gray-900 border-2 border-gray-700 peer-checked:border-blue-500 rounded-lg p-6 transition hover:border-gray-600">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-xl font-bold text-white">Dual Sensor</h3>
                  <i class="fas fa-gauge text-3xl text-blue-400"></i>
                </div>
                <p class="text-gray-400 text-sm mb-4">Monitor two axle groups (front & rear)</p>
                <div class="text-blue-400 font-semibold text-2xl">$225 <span class="text-sm text-gray-400">USD</span></div>
              </div>
            </label>
          </div>
        </div>

        <!-- Quantity -->
        <div class="mb-8">
          <label for="quantity" class="block text-white font-semibold mb-2">Quantity</label>
          <input
            type="number"
            id="quantity"
            name="quantity"
            value="1"
            min="1"
            max="10"
            class="w-32 bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          >
          <p class="text-gray-500 text-sm mt-2">Discounts apply for multiple units. Contact <a href="mailto:kevin@beaker.ca" class="text-blue-400 hover:text-blue-300">kevin@beaker.ca</a> for bulk pricing.</p>
        </div>

        <!-- Shipping Address -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-white mb-6">Shipping Address</h2>

          <div class="space-y-4">
            <div>
              <label for="shipping_address" class="block text-white font-semibold mb-2">Street Address</label>
              <input
                type="text"
                id="shipping_address"
                name="shipping_address"
                class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="123 Main Street"
                required
              >
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="shipping_city" class="block text-white font-semibold mb-2">City</label>
                <input
                  type="text"
                  id="shipping_city"
                  name="shipping_city"
                  class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="City"
                  required
                >
              </div>

              <div>
                <label for="shipping_state" class="block text-white font-semibold mb-2">State/Province</label>
                <input
                  type="text"
                  id="shipping_state"
                  name="shipping_state"
                  class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="State/Province"
                  required
                >
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="shipping_zip" class="block text-white font-semibold mb-2">ZIP/Postal Code</label>
                <input
                  type="text"
                  id="shipping_zip"
                  name="shipping_zip"
                  class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="ZIP Code"
                  required
                >
              </div>

              <div>
                <label for="shipping_country" class="block text-white font-semibold mb-2">Country</label>
                <select
                  id="shipping_country"
                  name="shipping_country"
                  class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  required
                >
                  <option value="US">United States</option>
                  <option value="CA">Canada</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Promo Banner -->
        <div class="bg-green-900/30 border border-green-500 rounded-lg p-4 mb-8">
          <p class="text-green-400 font-semibold">
            <i class="fas fa-gift mr-2"></i>This order includes 6 months free subscription for 1 user!
          </p>
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-between">
          <a href="{{ path('product_details') }}" class="text-gray-400 hover:text-white transition">
            <i class="fas fa-arrow-left mr-2"></i>Back to Product Details
          </a>
          <button
            type="submit"
            class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition"
          >
            <i class="fas fa-lock mr-2"></i>Proceed to Secure Checkout
          </button>
        </div>
      </form>
    </section>
    {% include '_footer.html.twig' %}
  </div>
{% endblock %}
