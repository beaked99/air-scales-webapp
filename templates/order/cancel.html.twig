{% extends 'base.html.twig' %}

{% block title %}Order Canceled - AirScales{% endblock %}

{% block body %}
  <div class="min-h-screen flex flex-col">
    {% include '_header.html.twig' %}
    <section class="container mx-auto px-6 py-12 max-w-3xl">
    <div class="text-center mb-8">
      <div class="inline-block bg-yellow-600 text-white w-20 h-20 rounded-full flex items-center justify-center text-4xl mb-6">
        <i class="fas fa-times"></i>
      </div>
      <h1 class="text-4xl font-bold text-white mb-4">Order Canceled</h1>
      <p class="text-xl text-gray-400">Your payment was canceled and no charges were made.</p>
    </div>

    <div class="bg-gray-800 rounded-lg border border-gray-700 p-8 mb-8">
      <h2 class="text-2xl font-bold text-white mb-4">What Happened?</h2>
      <p class="text-gray-300 mb-4">
        You canceled the checkout process before completing your payment. Your order (#{{ order.id }}) has been marked as canceled.
      </p>
      <p class="text-gray-300">
        If you experienced any issues during checkout or have questions, please contact us at <a href="mailto:sales@beaker.ca" class="text-blue-400 hover:text-blue-300">sales@beaker.ca</a>.
      </p>
    </div>

    <div class="flex justify-center gap-4">
      <a href="{{ path('order_create', {type: order.product.slug == 'device-dual-sensor' ? 'dual' : 'single'}) }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition">
        <i class="fas fa-redo mr-2"></i>Try Again
      </a>
      <a href="{{ path('app_homepage') }}" class="inline-block bg-gray-700 hover:bg-gray-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition">
        <i class="fas fa-home mr-2"></i>Back to Home
      </a>
    </div>
    </section>
    {% include '_footer.html.twig' %}
  </div>
{% endblock %}
