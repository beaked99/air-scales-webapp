{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/weight-masking.js') }}"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
    <script>
        // Set subscription status for weight masking
        window.hasActiveSubscription = {{ hasActiveSubscription ? 'true' : 'false' }};
    </script>
{% endblock %}

{% block body %}
<div class="min-h-screen text-white bg-gray-900">

  <!-- Header -->
  <header class="sticky top-0 z-50 px-4 py-3 bg-gray-800 border-b border-gray-700 shadow-md">
    <div class="flex items-center justify-between">
      <h1 class="text-xl font-semibold text-white">Dashboard</h1>
      {% if activeConfiguration %}
        <a href="{{ path('configuration_index') }}" class="text-sm text-sky-400 hover:text-sky-300">
          Switch Config
        </a>
      {% endif %}
    </div>
  </header>

  <main class="pb-20">

    <!-- Subscription Warning -->
    {% if not hasActiveSubscription %}
    <div class="m-4 p-4 border border-orange-500 rounded-lg bg-orange-900/30">
      <div class="flex items-center">
        <i class="mr-3 text-2xl text-orange-400 fas fa-exclamation-triangle"></i>
        <div>
          <div class="font-semibold text-orange-400">Subscription Required</div>
          <div class="text-sm text-orange-300">Activate your subscription to see live axle weights.</div>
        </div>
      </div>
    </div>
    {% endif %}

    {% if activeConfiguration %}
      <!-- Active Configuration Header -->
      <section class="m-4 p-4 bg-gray-800 border border-gray-700 rounded-lg">
        <div class="flex items-center justify-between mb-2">
          <h2 class="text-lg font-semibold text-white">{{ activeConfiguration.name }}</h2>
          <a href="{{ path('configuration_edit', {id: activeConfiguration.id}) }}" class="text-sm text-gray-400 hover:text-sky-400">
            <i class="fas fa-cog"></i>
          </a>
        </div>

        <!-- Bluetooth Status -->
        {% if bluetoothStatus %}
          <div class="flex items-center gap-2 text-sm">
            {% if bluetoothStatus.connected %}
              <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
              <span class="text-green-400">Connected to {{ bluetoothStatus.device.serialNumber ?: 'AS25-' ~ bluetoothStatus.device.id }}</span>
            {% else %}
              <div class="w-2 h-2 bg-gray-500 rounded-full"></div>
              <span class="text-gray-400">Not connected - Tap to connect</span>
            {% endif %}
          </div>
        {% else %}
          <div class="text-sm text-gray-500">No BLE hub configured</div>
        {% endif %}
      </section>

      <!-- Total Weight Display -->
      <section class="m-4 p-6 text-center bg-gray-800 border border-gray-700 rounded-lg">
        <div class="mb-2 text-sm tracking-wider text-gray-400 uppercase">Total Weight</div>
        <div class="flex items-end justify-center mb-2 space-x-2">
          {% if totalWeight > 0 %}
            <div class="text-5xl font-bold text-white">{{ totalWeight|number_format(0) }}</div>
            <div class="mb-2 text-xl text-gray-400">lbs</div>
          {% else %}
            <div class="text-5xl font-bold text-gray-500">--</div>
            <div class="mb-2 text-xl text-gray-400">lbs</div>
          {% endif %}
        </div>
      </section>

      <!-- Axle Groups -->
      <section class="m-4">
        <h2 class="mb-3 text-lg font-semibold">Axle Groups</h2>

        {% if axleGroups|length == 0 %}
          <div class="p-8 text-center bg-gray-800 border border-gray-700 rounded-lg">
            <p class="mb-4 text-gray-400">No axle groups configured yet.</p>
            <a href="{{ path('configuration_edit', {id: activeConfiguration.id}) }}" class="inline-block px-6 py-3 font-medium text-white rounded-lg bg-sky-600 hover:bg-sky-700">
              Add Devices
            </a>
          </div>
        {% else %}
          <div class="space-y-3">
            {% for item in axleGroups %}
              {% set axleGroup = item.entity %}
              <div class="p-4 bg-gray-800 border border-gray-700 rounded-lg">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <h3 class="text-lg font-semibold">{{ axleGroup.label }}</h3>
                    {% if item.status == 'good' %}
                      <span class="px-2 py-1 text-xs rounded bg-green-900/50 text-green-400">
                        ‚úì Calibrated ({{ item.points }} pts)
                      </span>
                    {% elseif item.status == 'warning' %}
                      <span class="px-2 py-1 text-xs rounded bg-yellow-900/50 text-yellow-400">
                        ‚ö†Ô∏è Needs more ({{ item.points }} pts)
                      </span>
                    {% else %}
                      <span class="px-2 py-1 text-xs rounded bg-red-900/50 text-red-400">
                        ‚ùå Not calibrated
                      </span>
                    {% endif %}
                  </div>
                  <div class="text-2xl font-bold text-white">
                    {% if item.weight > 0 %}
                      {{ item.weight|number_format(0) }} lbs
                    {% else %}
                      -- lbs
                    {% endif %}
                  </div>
                </div>
                <div class="text-xs text-gray-400">
                  {{ item.channelCount }} channel{{ item.channelCount != 1 ? 's' : '' }}
                  {% if item.calibratedChannels > 0 %}
                    ({{ item.calibratedChannels }} calibrated)
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Quick Actions -->
          <div class="mt-4 space-y-2">
            <a href="{{ path('configuration_bulk_calibration', {id: activeConfiguration.id}) }}" class="block w-full py-4 text-center font-semibold rounded-lg bg-sky-600 hover:bg-sky-700 transition-colors">
              üìù Add Scale Weights
            </a>
            <a href="{{ path('configuration_show', {id: activeConfiguration.id}) }}" class="block w-full py-3 text-center font-medium text-gray-300 border border-gray-600 rounded-lg hover:bg-gray-800 transition-colors">
              View Configuration Details
            </a>
          </div>
        {% endif %}
      </section>

    {% else %}
      <!-- No Active Configuration -->
      <section class="m-4">
        <div class="p-8 text-center bg-gray-800 border border-gray-700 rounded-lg">
          <div class="mb-4 text-6xl">üöõ</div>
          <h2 class="mb-2 text-xl font-semibold text-white">No Active Configuration</h2>
          <p class="mb-6 text-gray-400">Create a truck configuration to start tracking your axle weights.</p>
          <a href="{{ path('configuration_new') }}" class="inline-block px-8 py-3 font-semibold text-white rounded-lg bg-sky-600 hover:bg-sky-700">
            Create Configuration
          </a>
        </div>
      </section>
    {% endif %}

  </main>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 border-t bg-gray-900 border-gray-800">
    <div class="flex items-center justify-around py-3">
      <!-- Dashboard (Current Page) -->
      <button class="flex flex-col items-center px-3 py-2 space-y-1">
        <div class="flex items-center justify-center w-6 h-6 rounded-lg bg-sky-400">
          <i class="text-sm text-gray-900 fas fa-home"></i>
        </div>
        <span class="text-xs font-medium text-sky-400">Dashboard</span>
      </button>

      <!-- Fleet -->
      <a href="{{ path('configuration_index') }}" class="flex flex-col items-center px-3 py-2 space-y-1 transition hover:opacity-80">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg">
          <i class="text-sm text-gray-400 fas fa-truck"></i>
        </div>
        <span class="text-xs text-gray-400">Fleet</span>
      </a>

      <!-- Devices -->
      <a href="{{ path('configuration_index') }}" class="flex flex-col items-center px-3 py-2 space-y-1 transition hover:opacity-80">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg">
          <i class="text-sm text-gray-400 fas fa-microchip"></i>
        </div>
        <span class="text-xs text-gray-400">Devices</span>
      </a>

      <!-- Profile -->
      <a href="{{ path('user_profile') }}" class="flex flex-col items-center px-3 py-2 space-y-1 transition hover:opacity-80">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg">
          <i class="text-sm text-gray-400 fas fa-user"></i>
        </div>
        <span class="text-xs text-gray-400">Profile</span>
      </a>
    </div>
  </nav>
</div>
{% endblock %}
