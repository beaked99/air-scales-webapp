{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Air Scales Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/weight-masking.js') }}"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
    <script>
        // Initialize the API URL for the dashboard
        initializeApiUrl('{{ path("dashboard_api_devices_live_data") }}');

        // Set global user ID for Bluetooth connections
        window.currentUserId = {{ app.user.id }};

        // Set subscription status for weight masking
        window.hasActiveSubscription = {{ hasActiveSubscription ? 'true' : 'false' }};
    </script>
{% endblock %}

{% block body %}
<div class="min-h-screen text-gray-100 bg-gray-900">

  <!-- Header -->
  <header class="px-4 py-3 bg-gray-900 border-b border-gray-800">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-white">Air Scales Dashboard</h1>
      <div class="flex items-center space-x-3">
        <div class="text-gray-400 fas fa-user"></div>
        <div class="text-xs text-gray-400">{{ app.user.fullName ?: app.user.email }}</div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="pb-20">
    <div id="warning" class="p-1 space-y-2 bg-gray-900">
      <!-- Subscription Warning -->
      {% if not hasActiveSubscription %}
      <div class="p-4 border border-black rounded-lg bg-orange-400/85">
        <div class="flex items-center">
          <div class="flex items-center justify-center w-8 h-8 mr-3">
            <i class="text-4xl text-black fas fa-exclamation-triangle"></i>
          </div>
          <div>
            <div class="font-bold text-black">Subscription Required</div>
            <div class="text-sm text-black">Ensure you have an active subscription to see live axle weights.</div>
          </div>
        </div>
      </div>
      {% endif %}
      
      <!-- Config Warning -->
      {% if not hasSetupConfiguration %}
      <div class="p-4 border border-black rounded-lg bg-orange-400/85">
        <div class="flex items-center">
          <div class="flex items-center justify-center w-8 h-8 mr-3">
            <i class="text-4xl text-black fas fa-exclamation-triangle"></i>
          </div>
          <div>
            <div class="font-bold text-black">Setup Required</div>
            <div class="text-sm text-black">Set up your truck and trailer configuration to see axle weights.</div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>

    <!-- Device Discovery Section -->
    <section class="p-4 bg-gray-800 border-b border-gray-700">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium text-white">Device Discovery</h2>
        <button id="scan-devices-btn" class="flex items-center gap-2 px-4 py-2 text-white transition-colors rounded-lg bg-sky-600 hover:bg-sky-700">
          <i class="fas fa-bluetooth-b"></i>
          <span>Scan for Devices</span>
        </button>
      </div>
      
      <!-- Scanning indicator -->
      <div id="scanning-indicator" class="hidden p-3 mb-4 border border-blue-600 rounded-lg bg-blue-600/20">
        <div class="flex items-center">
          <div class="w-4 h-4 mr-3 border-2 border-blue-400 rounded-full animate-spin border-t-transparent"></div>
          <span class="text-blue-300">Scanning for Air Scales devices...</span>
        </div>
      </div>

      <!-- Discovered devices -->
      <div id="discovered-devices" class="hidden space-y-2">
        <h3 class="text-sm font-medium text-gray-300">Found Devices:</h3>
        <div id="discovered-devices-list" class="space-y-2">
          <!-- Discovered devices will appear here -->
        </div>
      </div>

      <!-- No devices found message -->
      <div id="no-devices-found" class="hidden p-3 text-center border border-gray-600 rounded-lg bg-gray-700/50">
        <p class="text-gray-400">No Air Scales devices found nearby.</p>
        <p class="text-sm text-gray-500">Make sure your devices are powered on and in pairing mode.</p>
      </div>
    </section>

    <!-- Device Status List -->
    <section class="bg-gray-900 border-gray-800">
      <div class="p-4 border-b border-gray-800">
        <h2 class="text-lg font-medium text-white">Current Axle-Group Configuration</h2>
      </div>
      <div class="divide-y divide-gray-800" id="device-list">
        {% if devices is empty %}
          <!-- No devices message -->
          <div class="p-8 text-center">
            <p class="mb-4 text-gray-400">No devices found.</p>
            <p class="text-sm text-gray-500">Connect to an Air Scales device to get started.</p>
          </div>
        {% else %}
          <!-- Loop through real devices -->
          {% for device in devices %}
          <a href="{{ path('device_detail', {id: device.id}) }}" 
             class="flex items-center justify-between p-4 transition-colors device-row hover:bg-gray-800/50"
             data-device-id="{{ device.id }}"
             data-mac-address="{{ device.macAddress|upper }}">
            <div class="flex items-center space-x-3">
              {# Connection status indicator #}
              <div class="device-status-dot w-3 h-3 rounded-full
                {% if device.connectionStatus == 'connected' %}bg-green-400 animate-pulse
                {% elseif device.connectionStatus == 'recent' %}bg-orange-400
                {% elseif device.connectionStatus == 'corrupted' %}bg-purple-500
                {% elseif device.connectionStatus == 'offline' %}bg-red-500
                {% else %}bg-gray-500
                {% endif %}">
              </div>

              <div>
                <div class="font-medium text-white device-name">
                  {{ device.serialNumber ?: ('Device #' ~ device.id) }}
                </div>
                <div class="device-status-text text-sm
                  {% if device.connectionStatus == 'connected' %}text-green-400
                  {% elseif device.connectionStatus == 'recent' %}text-orange-400
                  {% elseif device.connectionStatus == 'corrupted' %}text-purple-400
                  {% elseif device.connectionStatus == 'offline' %}text-red-500
                  {% else %}text-gray-500
                  {% endif %}">
                  {{ device.lastSeenText }}
                </div>
              </div>
            </div>
            
            <div class="text-right">
              <div class="font-bold device-weight
                {% if device.connectionStatus == 'connected' or device.connectionStatus == 'recent' %}text-white
                {% else %}text-gray-400
                {% endif %}">
                {% if device.latestMicroData %}
                  {{ device.latestMicroData.weight|number_format(0) }} lbs
                {% else %}
                  -- lbs
                {% endif %}
              </div>
              <div class="text-sm text-gray-400 device-pressure">
                {% if device.latestMicroData %}
                  {{ device.latestMicroData.mainAirPressure|number_format(1) }} psi
                {% else %}
                  -- psi
                {% endif %}
              </div>
            </div>
          </a>
          {% endfor %}
        {% endif %}
      </div>
    </section>

    <!-- Total Weight Display -->
    <section class="p-4 text-center bg-gray-900 border border-gray-800">
      <div class="mb-2 text-sm tracking-wider text-gray-400 uppercase">Total Estimated Weight</div>
      <div class="flex items-end justify-center mb-3 space-x-2">
        {% if totalWeight.has_data %}
        <div id="total-weight-value" class="text-5xl font-bold text-white">{{ totalWeight.total|number_format(0) }}</div>
        <div class="text-lg text-gray-400">lbs</div>
        {% if totalWeight.error_margin > 0 %}
        <div class="text-lg text-gray-400">Â± {{ totalWeight.error_margin }}</div>
        {% endif %}
        {% else %}
        <div id="total-weight-value" class="text-5xl font-bold text-gray-500">--</div>
        <div class="text-lg text-gray-400">lbs</div>
        {% endif %}
      </div>
      
      <div class="flex items-end justify-center space-x-2">
        <svg class="h-[1lh] w-5.5 shrink-0" viewBox="0 0 22 22" fill="none" stroke-linecap="square">
          <circle cx="11" cy="11" r="11" class="fill-sky-400/20" />
          <circle cx="11" cy="11" r="10.5" class="stroke-sky-400/20" />
          <path d="M8 11.5L10.5 14L14 8" class="stroke-sky-800 dark:stroke-sky-300" />
        </svg>
        <p class="font-mono font-medium text-white">within limits</p>
      </div>
    </section>

    <!-- Quote Section -->
    <section id="quote-of-the-day" class="bg-gray-900">
      <div id="tips" class="p-4">
        <div class="relative text-center">
          <p class="px-6 italic text-gray-200">
            Your Air Scales device improves with each calibration. Start with 4 to get basic readings; aim for 10+ for reliable accuracy.
          </p>
          <p class="mt-2 text-sm text-gray-400">beaker, July 2025</p>
        </div>
      </div>
    </section>

  </main>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-gray-900 border-t border-gray-800">
    <div class="flex items-center justify-around py-3">
      <!-- Devices (Current Page) -->
      <button class="flex flex-col items-center px-3 py-2 space-y-1 tab-btn">
        <div class="flex items-center justify-center w-6 h-6 rounded-lg tab-icon bg-sky-400">
          <i class="text-sm text-gray-900 fas fa-tachometer-alt"></i>
        </div>
        <span class="text-xs font-medium tab-label text-sky-400">Devices</span>
      </button>

      <!-- Fleet -->
      <a href="{{ path('configuration_index') }}" class="flex flex-col items-center px-3 py-2 space-y-1 hover:opacity-80 transition">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg">
          <i class="text-sm text-gray-400 fas fa-truck"></i>
        </div>
        <span class="text-xs text-gray-400">Fleet</span>
      </a>

      <!-- Calibrate -->
      <button class="flex flex-col items-center px-3 py-2 space-y-1 tab-btn">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg tab-icon">
          <i class="text-sm text-gray-400 fas fa-balance-scale"></i>
        </div>
        <span class="text-xs text-gray-400 tab-label">Calibrate</span>
      </button>

      <!-- Setup -->
      <button class="flex flex-col items-center px-3 py-2 space-y-1 tab-btn">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg tab-icon">
          <i class="text-sm text-gray-400 fas fa-cog"></i>
        </div>
        <span class="text-xs text-gray-400 tab-label">Setup</span>
      </button>

      <!-- Profile -->
      <a href="{{ path('user_profile') }}" class="flex flex-col items-center px-3 py-2 space-y-1 hover:opacity-80 transition">
        <div class="flex items-center justify-center w-6 h-6 bg-gray-700 rounded-lg">
          <i class="text-sm text-gray-400 fas fa-user"></i>
        </div>
        <span class="text-xs text-gray-400">Profile</span>
      </a>
    </div>
  </nav>
</div>

<!-- Loading/Success Messages -->
<div id="toast-container" class="fixed z-50 space-y-2 top-4 right-4"></div>

{% endblock %}