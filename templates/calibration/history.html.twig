{# templates/calibration/history.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Calibration History{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 text-gray-100 p-6">
  <h1 class="text-2xl font-bold text-green-400 mb-6">
    Calibration History: {{ device.serialNumber ?: 'Device #' ~ device.id }}
  </h1>

  <!-- Device Info -->
  <div class="bg-gray-800 rounded-lg p-6 mb-8">
    <h2 class="text-xl font-semibold text-white mb-4">Device Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-400">Serial Number:</span>
        <span class="text-gray-100 ml-2">{{ device.serialNumber ?: 'N/A' }}</span>
      </div>
      <div>
        <span class="text-gray-400">MAC Address:</span>
        <span class="text-gray-100 ml-2 font-mono">{{ device.macAddress ?: 'N/A' }}</span>
      </div>
      <div>
        <span class="text-gray-400">Vehicle:</span>
        <span class="text-gray-100 ml-2">{{ device.vehicle ?: 'Unassigned' }}</span>
      </div>
    </div>
  </div>

  <!-- Per-Channel Calibration History -->
  {% for channelId, channelData in calibrationsByChannel %}
    {% set channel = channelData.channel %}
    {% set calibrations = channelData.calibrations %}
    {% set coeffs = channelCoeffs[channelId] ?? null %}

    <div id="channel-{{ channel ? channel.channelIndex : 'unknown' }}" class="bg-gray-800 rounded-lg mb-8">
      <div class="p-6 border-b border-gray-700">
        <h2 class="text-xl font-semibold text-white">
          {{ channel ? channel.displayLabel : 'Unknown Channel' }}
          <span class="ml-3 text-sm font-normal text-gray-400">({{ calibrations|length }} calibration points)</span>
        </h2>
      </div>

      <!-- Regression Model for this channel -->
      {% if coeffs %}
      <div class="p-6 border-b border-gray-700 bg-gray-750">
        <h3 class="text-lg font-medium text-white mb-3">Regression Model</h3>

        {% if coeffs.intercept is not null or coeffs.airPressure is not null %}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm mb-4">
            {% if coeffs.airPressure is not null %}
            <div>
              <span class="text-gray-400">Scale Factor:</span>
              <span class="text-green-400 ml-2 font-mono">{{ coeffs.airPressure|number_format(1) }} lbs/psi</span>
            </div>
            {% endif %}
            {% if coeffs.airTemp is not null %}
            <div>
              <span class="text-gray-400">Temperature Coeff:</span>
              <span class="text-green-400 ml-2 font-mono">{{ coeffs.airTemp|number_format(2) }} lbs/°F</span>
            </div>
            {% endif %}
            {% if coeffs.rSquared is not null %}
            <div>
              <span class="text-gray-400">R²:</span>
              <span class="text-blue-400 ml-2 font-mono">{{ coeffs.rSquared|number_format(3) }}</span>
            </div>
            {% endif %}
            {% if coeffs.rmse is not null %}
            <div>
              <span class="text-gray-400">RMSE:</span>
              <span class="text-blue-400 ml-2 font-mono">{{ coeffs.rmse|number_format(1) }} lbs</span>
            </div>
            {% endif %}
          </div>

          <div class="p-3 bg-gray-700 rounded">
            <p class="text-gray-300 text-sm">
              <strong>Equation:</strong>
              {% set scaleFactor = coeffs.airPressure|number_format(1) %}
              {% set tempCoeff = coeffs.airTemp|number_format(2) %}
              {% if coeffs.airTemp|abs < 0.01 %}
                Weight = {{ scaleFactor }} × (P<sub>bag</sub> - P<sub>ambient</sub>)
              {% else %}
                Weight = {{ scaleFactor }} × (P<sub>bag</sub> - P<sub>ambient</sub>) + {{ tempCoeff }} × T
              {% endif %}
            </p>
          </div>
        {% else %}
          <p class="text-gray-400 text-sm">No calibration model. Add calibration points to generate.</p>
        {% endif %}
      </div>
      {% endif %}

      <!-- Calibration points table -->
      {% if calibrations|length > 0 %}
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="bg-gray-700">
            <tr>
              <th class="p-3 text-left text-gray-200">Date</th>
              <th class="p-3 text-right text-gray-200">Scale Weight</th>
              <th class="p-3 text-right text-gray-200">Air Pressure</th>
              <th class="p-3 text-right text-gray-200">Ambient Pressure</th>
              <th class="p-3 text-right text-gray-200">Temperature</th>
              <th class="p-3 text-right text-gray-200">Elevation</th>
              <th class="p-3 text-left text-gray-200">Comment</th>
              <th class="p-3 text-center text-gray-200">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            {% for calibration in calibrations %}
              <tr>
                <td class="p-3 text-gray-100">{{ calibration.createdAt|date('M j, Y g:i A') }}</td>
                <td class="p-3 text-right text-green-400 font-bold">{{ calibration.scaleWeight|number_format(1) }} lbs</td>
                <td class="p-3 text-right text-gray-300">{{ calibration.airPressure|number_format(1) }} psi</td>
                <td class="p-3 text-right text-gray-300">{{ calibration.ambientAirPressure|number_format(1) }} psi</td>
                <td class="p-3 text-right text-gray-300">{{ calibration.airTemperature|number_format(1) }}°F</td>
                <td class="p-3 text-right text-gray-300">{{ calibration.elevation|number_format(0) }} ft</td>
                <td class="p-3 text-gray-400">{{ calibration.comment ?: '—' }}</td>
                <td class="p-3 text-center">
                  <div class="flex items-center justify-center gap-2">
                    <a href="{{ path('calibration_edit', { deviceId: device.id, id: calibration.id }) }}"
                       class="text-blue-400 hover:text-blue-300 text-sm"
                       title="Edit">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    </a>
                    <button class="text-red-400 hover:text-red-300 text-sm delete-calibration"
                            data-calibration-id="{{ calibration.id }}"
                            data-weight="{{ calibration.scaleWeight|number_format(1) }}"
                            title="Delete">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      {% else %}
        <div class="p-6 text-center">
          <p class="text-gray-400 mb-4">No calibration points for this channel yet.</p>
          <a href="{{ path('device_calibration', { id: device.id }) }}"
             class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
            Add Calibration Point
          </a>
        </div>
      {% endif %}
    </div>
  {% else %}
    <div class="bg-gray-800 rounded-lg p-6 text-center">
      <p class="text-gray-400 mb-4">No calibration data available.</p>
      <a href="{{ path('device_calibration', { id: device.id }) }}"
         class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded inline-block">
        Add First Calibration Point
      </a>
    </div>
  {% endfor %}

  <!-- Navigation -->
  <div class="text-center space-x-4">
    <a href="{{ path('device_calibration', { id: device.id }) }}" 
       class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
      Add Calibration Point
    </a>
    <a href="{{ path('app_dashboard') }}" 
       class="text-blue-400 hover:text-blue-200">
      ← Back to Dashboard
    </a>
  </div>
</div>

<script>
// Force regression recalculation
document.getElementById('force-regression')?.addEventListener('click', function() {
  if (!confirm('Recalculate the regression model with current data?')) {
    return;
  }

  const button = this;
  button.disabled = true;
  button.textContent = 'Calculating...';

  fetch('{{ path('api_force_regression', { id: device.id }) }}', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.status === 'success') {
      alert('Regression model updated successfully!');
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Failed to update regression model.');
  })
  .finally(() => {
    button.disabled = false;
    button.textContent = 'Recalculate Model';
  });
});

// Delete calibration
document.querySelectorAll('.delete-calibration').forEach(button => {
  button.addEventListener('click', function() {
    const calibrationId = this.dataset.calibrationId;
    const weight = this.dataset.weight;

    if (!confirm(`Delete calibration point (${weight} lbs)?\n\nThis will recalculate the regression model.`)) {
      return;
    }

    const originalHtml = this.innerHTML;
    this.disabled = true;
    this.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>';

    fetch('{{ path('calibration_delete', { deviceId: device.id, id: 0 }) }}'.replace('/0', '/' + calibrationId), {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert('Calibration deleted successfully! Regression model updated.');
        location.reload();
      } else {
        alert('Error: ' + (data.message || 'Failed to delete calibration'));
        this.disabled = false;
        this.innerHTML = originalHtml;
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Failed to delete calibration.');
      this.disabled = false;
      this.innerHTML = originalHtml;
    });
  });
});
</script>
{% endblock %}