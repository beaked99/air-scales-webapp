{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Air Scales{% endblock %}</title>

    {{ encore_entry_link_tags('app') }}

    {% block stylesheets %}
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    {% endblock %}

    {{ encore_entry_script_tags('app') }}

    {% block javascripts %}{% endblock %}
  </head>
  <body>
    <div class="bg-gray-900 text-gray-100 min-h-screen">
      <!-- Navigation -->
      <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-8">
              <a href="{{ path('app_homepage') }}" class="text-2xl font-bold text-blue-400">AirScales</a>
              <div class="hidden md:flex space-x-6">
                <a href="{{ path('app_homepage') }}#features" class="text-gray-300 hover:text-blue-400 transition">Features</a>
                <a href="{{ path('app_homepage') }}#how-it-works" class="text-gray-300 hover:text-blue-400 transition">How It Works</a>
                <a href="{{ path('product_details') }}" class="text-gray-300 hover:text-blue-400 transition">Product</a>
                <a href="{{ path('app_homepage') }}#app" class="text-gray-300 hover:text-blue-400 transition">Mobile App</a>
              </div>
            </div>
            <div>
              {% if app.user %}
                <a href="{{ path('app_dashboard') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
                  <i class="fas fa-gauge mr-2"></i>Dashboard
                </a>
              {% else %}
                <a href="{{ path('app_login') }}" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
                  <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </nav>

      {% block body %}{% endblock %}

      <!-- Footer -->
      <footer class="bg-gray-800 border-t border-gray-700 py-12">
        <div class="container mx-auto px-6">
          <div class="grid md:grid-cols-4 gap-8">
            <div>
              <h3 class="text-xl font-bold text-white mb-4">AirScales</h3>
              <p class="text-gray-400">
                Real-time load monitoring for professional truck drivers.
              </p>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-white mb-4">Product</h4>
              <ul class="space-y-2">
                <li><a href="{{ path('app_homepage') }}#features" class="text-gray-400 hover:text-blue-400 transition">Features</a></li>
                <li><a href="{{ path('product_details') }}" class="text-gray-400 hover:text-blue-400 transition">Product Details</a></li>
                <li><a href="{{ path('app_homepage') }}#how-it-works" class="text-gray-400 hover:text-blue-400 transition">How It Works</a></li>
              </ul>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-white mb-4">Support</h4>
              <ul class="space-y-2">
                <li><a href="{{ path('faq') }}" class="text-gray-400 hover:text-blue-400 transition">FAQ</a></li>
                <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">Installation Guide</a></li>
              </ul>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-white mb-4">Legal</h4>
              <ul class="space-y-2">
                <li><a href="{{ path('privacy_policy') }}" class="text-gray-400 hover:text-blue-400 transition">Privacy Policy</a></li>
                <li><a href="{{ path('terms_of_service') }}" class="text-gray-400 hover:text-blue-400 transition">Terms of Service</a></li>
              </ul>
            </div>
          </div>
          <div class="border-t border-gray-700 mt-12 pt-8 text-center text-gray-400">
            <p>&copy; {{ "now"|date("Y") }} Beaker.ca - AirScales. All rights reserved.</p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
