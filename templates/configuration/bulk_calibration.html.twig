{# templates/configuration/bulk_calibration.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Add Truck Scale Weights{% endblock %}

{% block body %}
<div class="min-h-screen text-white bg-gray-900">

  <!-- Header -->
  <header class="sticky top-0 z-50 px-4 py-3 bg-gray-800 border-b border-gray-700 shadow-md">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-semibold text-white">Add Truck Scale Weights</h1>
        <div class="text-sm text-gray-400 mt-1">{{ configuration.name }}</div>
      </div>
      <a href="{{ path('configuration_show', {id: configuration.id}) }}" class="text-sm text-sky-400 hover:text-sky-300">
        ‚Üê Back
      </a>
    </div>
  </header>

  <main class="pb-20">

    <!-- Flash Messages -->
    {% for type, messages in app.flashes %}
      {% for message in messages %}
        <div class="mx-4 mt-4 p-3 rounded-lg border-l-4 {% if type == 'success' %}bg-green-900/50 border-green-500 text-green-100{% elseif type == 'warning' %}bg-yellow-900/50 border-yellow-500 text-yellow-100{% else %}bg-red-900/50 border-red-500 text-red-100{% endif %}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}

    <!-- Instructions -->
    <section class="m-4 p-4 bg-sky-900/30 border border-sky-700 rounded-lg">
      <h2 class="text-lg font-semibold text-sky-400 mb-2">üìù Instructions</h2>
      <div class="text-sm text-gray-300 space-y-2">
        <p>Enter the weights from your truck scale ticket below. The system will use the current sensor readings from your devices to create calibration points.</p>
        <p class="text-yellow-400">‚ö†Ô∏è Make sure your devices are powered on and have recent data before submitting.</p>
      </div>
    </section>

    <!-- Bulk Calibration Form -->
    <form method="POST" class="m-4 space-y-4">

      <!-- Scale Ticket Information -->
      <section class="p-4 bg-gray-800 rounded-lg border border-gray-700">
        <h2 class="text-lg font-semibold mb-4">Scale Ticket Information</h2>

        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Ticket Number (Optional)</label>
            <input type="text" name="ticket_number"
                   class="w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-sky-400"
                   placeholder="e.g., #12345">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Location (Optional)</label>
            <input type="text" name="location"
                   class="w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-sky-400"
                   placeholder="e.g., CAT Scale - Exit 45">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Date & Time (Optional)</label>
            <input type="datetime-local" name="occurred_at"
                   value="{{ 'now'|date('Y-m-d\\TH:i') }}"
                   class="w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-sky-400">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Notes (Optional)</label>
            <textarea name="notes" rows="2"
                      class="w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:border-sky-400"
                      placeholder="Any additional notes..."></textarea>
          </div>
        </div>
      </section>

      <!-- Axle Group Weights -->
      <section class="p-4 bg-gray-800 rounded-lg border border-gray-700">
        <h2 class="text-lg font-semibold mb-4">Axle Weights</h2>

        {% if axleGroups|length == 0 %}
          <div class="p-6 text-center text-gray-400">
            No axle groups configured. Please add devices to this configuration first.
          </div>
        {% else %}
          <div class="space-y-4">
            {% for item in axleGroups %}
              {% set axleGroup = item.entity %}
              <div class="p-4 bg-gray-750 border border-gray-600 rounded-lg">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <h3 class="font-semibold text-white">{{ axleGroup.label }}</h3>
                    <div class="text-xs text-gray-400 mt-1">
                      {{ item.channels|length }} channel{{ item.channels|length != 1 ? 's' : '' }}
                      {% if item.channels|length > 1 %}
                        (weight will be distributed evenly)
                      {% endif %}
                    </div>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Weight (lbs)</label>
                  <input type="number"
                         name="weights[{{ axleGroup.id }}]"
                         step="1"
                         min="0"
                         class="w-full px-4 py-3 bg-gray-700 text-white text-lg font-semibold border border-gray-600 rounded-lg focus:outline-none focus:border-sky-400"
                         placeholder="0">
                </div>

                <!-- Show channels -->
                <div class="mt-3 pt-3 border-t border-gray-600">
                  <div class="text-xs text-gray-400 mb-2">Will create calibration points for:</div>
                  {% for channel in item.channels %}
                    <div class="text-xs text-gray-300 py-1">
                      ‚Ä¢ {{ channel.displayLabel }} ({{ channel.device.serialNumber ?: 'AS25-' ~ channel.device.id }})
                    </div>
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Submit Button -->
          <div class="mt-6">
            <button type="submit"
                    class="w-full py-4 text-lg font-semibold bg-green-600 hover:bg-green-700 rounded-lg transition-colors">
              ‚úì Add Calibration Points
            </button>
          </div>

          <div class="mt-3 p-3 bg-yellow-900/30 border border-yellow-700 rounded-lg text-sm text-yellow-200">
            <strong>Note:</strong> This will use the most recent sensor readings from your devices. Make sure they are powered on and have transmitted data recently.
          </div>
        {% endif %}
      </section>

    </form>

  </main>
</div>
{% endblock %}
