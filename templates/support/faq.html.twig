{% extends 'base.html.twig' %}

{% block title %}Frequently Asked Questions - AirScales{% endblock %}

{% block body %}
  <div class="min-h-screen flex flex-col">
    {% include '_header.html.twig' %}

    <!-- Content -->
    <div class="container mx-auto px-6 py-12 max-w-4xl">
      <h1 class="text-4xl font-bold text-white mb-4">Frequently Asked Questions</h1>
      <p class="text-gray-400 mb-8">Common questions about AirScales load monitoring system</p>

      {% if faqsByCategory is empty %}
        <div class="bg-yellow-900/30 border border-yellow-500 rounded-lg p-6">
          <p class="text-yellow-400">
            <i class="fas fa-info-circle mr-2"></i>
            No FAQ sections have been added yet. Please check back later or contact support.
          </p>
        </div>
      {% else %}
        <div class="space-y-8">
          {% for category, faqs in faqsByCategory %}
            <!-- Category Section -->
            <section class="bg-gray-800 rounded-lg border border-gray-700 p-6">
              <h2 class="text-2xl font-bold text-blue-400 mb-6">{{ category|title }}</h2>

              <div class="space-y-6">
                {% for faq in faqs %}
                  <div>
                    <h3 class="text-xl font-semibold text-white mb-3">{{ faq.title }}</h3>
                    <div class="text-gray-300 space-y-3">
                      {{ faq.content|raw }}
                    </div>
                  </div>

                  {% if not loop.last %}
                    <hr class="border-gray-700 my-6">
                  {% endif %}
                {% endfor %}
              </div>
            </section>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {% include '_footer.html.twig' %}
  </div>
{% endblock %}
