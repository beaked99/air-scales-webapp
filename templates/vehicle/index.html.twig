{% extends 'base.html.twig' %}

{% block title %}My Vehicles{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 text-gray-100 p-6">
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-green-400">My Vehicles</h1>
      <button id="add-vehicle-btn" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
        + Add Vehicle
      </button>
    </div>

    <!-- Search/Filter Bar -->
    <div class="bg-gray-800 rounded-lg p-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-400 text-sm mb-2">Search My Vehicles</label>
          <input
            type="text"
            id="search-input"
            placeholder="Search by make, model, license plate, VIN..."
            class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none"
          />
        </div>
        <div>
          <label class="block text-gray-400 text-sm mb-2">Find & Add Vehicles with Air Scales</label>
          <div class="relative">
            <input
              type="text"
              id="vehicle-search-input"
              placeholder="Search by license plate, VIN, or make/model..."
              class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none"
              autocomplete="off"
            />
            <div id="vehicle-search-results" class="hidden absolute z-10 w-full mt-1 bg-gray-700 rounded-lg shadow-lg max-h-60 overflow-y-auto border border-gray-600">
              <!-- Search results will appear here -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Vehicles Grid -->
    <div id="vehicles-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for vehicle in vehicles %}
        <div class="vehicle-card bg-gray-800 rounded-lg p-6 hover:bg-gray-750 transition"
             data-make="{{ vehicle.make|lower }}"
             data-model="{{ vehicle.model|lower }}"
             data-vin="{{ vehicle.vin|lower }}"
             data-license="{{ vehicle.licensePlate|lower }}"
             data-nickname="{{ vehicle.nickname|lower }}">

          <!-- Vehicle Info -->
          <div class="mb-4">
            <h3 class="text-xl font-semibold text-white mb-2">
              {{ vehicle }}
            </h3>
            {% if vehicle.nickname %}
              <p class="text-gray-400 text-sm italic">"{{ vehicle.nickname }}"</p>
            {% endif %}
          </div>

          <!-- Details -->
          <div class="space-y-2 text-sm mb-4">
            {% if vehicle.vin %}
              <div>
                <span class="text-gray-400">VIN:</span>
                <span class="text-gray-200 ml-2 font-mono">{{ vehicle.vin }}</span>
              </div>
            {% endif %}
            {% if vehicle.licensePlate %}
              <div>
                <span class="text-gray-400">License Plate:</span>
                <span class="text-gray-200 ml-2 font-mono">{{ vehicle.licensePlate }}</span>
              </div>
            {% endif %}
            <div>
              <span class="text-gray-400">Devices:</span>
              <span class="text-green-400 ml-2 font-bold">{{ vehicle.devices|length }}</span>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex gap-2">
            <a href="{{ path('vehicle_detail', {id: vehicle.id}) }}"
               class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded text-sm">
              View Details
            </a>
            <button class="edit-vehicle-btn bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-2 rounded text-sm"
                    data-vehicle-id="{{ vehicle.id }}">
              Edit
            </button>
            <button class="delete-vehicle-btn bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded text-sm"
                    data-vehicle-id="{{ vehicle.id }}"
                    data-vehicle-name="{{ vehicle }}"
                    data-device-count="{{ vehicle.devices|length }}">
              Delete
            </button>
          </div>
        </div>
      {% else %}
        <div class="col-span-full text-center py-12">
          <p class="text-gray-400 text-lg mb-4">No vehicles found</p>
          <button id="add-first-vehicle-btn" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded">
            Add Your First Vehicle
          </button>
        </div>
      {% endfor %}
    </div>

    <!-- No Results Message (hidden by default) -->
    <div id="no-results" class="hidden text-center py-12">
      <p class="text-gray-400 text-lg">No vehicles match your search</p>
    </div>

    <!-- Back to Dashboard -->
    <div class="mt-8 text-center">
      <a href="{{ path('app_dashboard') }}" class="text-blue-400 hover:text-blue-200">
        ‚Üê Back to Dashboard
      </a>
    </div>
  </div>
</div>

<!-- Add/Edit Vehicle Modal -->
<div id="vehicle-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md">
    <h2 id="modal-title" class="text-2xl font-bold text-white mb-4">Add Vehicle</h2>

    <form id="vehicle-form">
      <input type="hidden" id="vehicle-id" value="">

      <div class="space-y-4">
        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">Year *</label>
          <input type="number" id="vehicle-year" min="1900" max="2100" required
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none">
        </div>

        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">Make *</label>
          <input type="text" id="vehicle-make" required
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none">
        </div>

        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">Model *</label>
          <input type="text" id="vehicle-model" required
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none">
        </div>

        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">Nickname</label>
          <input type="text" id="vehicle-nickname" placeholder="e.g., Big Red, Unit 42"
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none">
        </div>

        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">VIN</label>
          <input type="text" id="vehicle-vin" maxlength="17" placeholder="17-character VIN"
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none font-mono">
        </div>

        <div>
          <label class="block text-gray-300 text-sm font-semibold mb-2">License Plate</label>
          <input type="text" id="vehicle-license-plate" placeholder="ABC-1234"
                 class="w-full bg-gray-700 text-white px-4 py-2 rounded border border-gray-600 focus:border-green-500 focus:outline-none font-mono">
        </div>
      </div>

      <div class="flex gap-4 mt-6">
        <button type="submit" class="flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded">
          Save
        </button>
        <button type="button" id="cancel-modal-btn" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>

<script src="{{ asset('js/vehicles.js') }}"></script>
{% endblock %}
