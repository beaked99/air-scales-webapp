{% extends 'base.html.twig' %}

{% block title %}AirScales - Real-Time Load Monitoring for Semi Trucks{% endblock %}

{% block body %}
<div class="bg-gray-900 text-gray-100 min-h-screen">
  <!-- Navigation -->
  <nav class="bg-gray-800 border-b border-gray-700">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-8">
          <a href="{{ path('app_homepage') }}" class="text-2xl font-bold text-blue-400">AirScales</a>
          <div class="hidden md:flex space-x-6">
            <a href="#features" class="text-gray-300 hover:text-blue-400 transition">Features</a>
            <a href="#how-it-works" class="text-gray-300 hover:text-blue-400 transition">How It Works</a>
            <a href="{{ path('product_details') }}" class="text-gray-300 hover:text-blue-400 transition">Product</a>
            <a href="#app" class="text-gray-300 hover:text-blue-400 transition">Mobile App</a>
          </div>
        </div>
        <div>
          {% if app.user %}
            <a href="{{ path('app_dashboard') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
              <i class="fas fa-gauge mr-2"></i>Dashboard
            </a>
          {% else %}
            <a href="{{ path('app_login') }}" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
              <i class="fas fa-sign-in-alt mr-2"></i>Sign In
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="container mx-auto px-6 py-20">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-5xl font-bold text-white mb-6">
          Real-Time Load Monitoring for Semi Trucks
        </h1>
        <p class="text-xl text-gray-400 mb-8">
          Monitor your truck's axle weights in real-time with AirScales. Bluetooth and WiFi-enabled load monitoring that keeps you legal and safe on the road.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="{{ path('product_details') }}" class="bg-blue-600 hover:bg-blue-700 text-white text-center px-8 py-4 rounded-lg text-lg font-semibold transition">
            <i class="fas fa-shopping-cart mr-2"></i>Order Your AirScales Today
          </a>
          <a href="#how-it-works" class="bg-gray-700 hover:bg-gray-600 text-white text-center px-8 py-4 rounded-lg text-lg font-semibold transition">
            <i class="fas fa-info-circle mr-2"></i>Learn More
          </a>
        </div>
      </div>
      <div class="flex justify-center">
        <img src="{{ asset('images/airscales.png') }}" alt="AirScales Device" class="rounded-lg shadow-2xl max-w-full h-auto">
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="bg-gray-800 py-20">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center text-white mb-16">Why Choose AirScales?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-weight-scale"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Real-Time Monitoring</h3>
          <p class="text-gray-400">
            Get instant weight readings from your air bag pressure sensors. Know your load status at all times.
          </p>
        </div>

        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-wifi"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Wireless Connectivity</h3>
          <p class="text-gray-400">
            Connect via Bluetooth or WiFi. Monitor from your phone, anywhere on your truck.
          </p>
        </div>

        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-road"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Dual Axle Support</h3>
          <p class="text-gray-400">
            Monitor up to 2 separate load levelers - track both front and rear axle groups independently.
          </p>
        </div>

        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-bolt"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">12V Powered</h3>
          <p class="text-gray-400">
            Simple 12V connection - plug and play installation. No complex wiring required.
          </p>
        </div>

        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-shield-halved"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Avoid Overload Fines</h3>
          <p class="text-gray-400">
            Stay compliant with weight regulations. Know your load before you hit the scales.
          </p>
        </div>

        <div class="bg-gray-900 p-8 rounded-lg border border-gray-700">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-mobile-screen"></i>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Mobile App</h3>
          <p class="text-gray-400">
            View your load data on iOS or Android. Dashboard, history, and alerts all in one app.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-20">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center text-white mb-16">How It Works</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-600 text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
            1
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Install on Your Truck</h3>
          <p class="text-gray-400">
            Connect AirScales to your truck's 12V power supply and air bag pressure sensors. Simple plug-and-play installation.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-blue-600 text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
            2
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Connect via Bluetooth/WiFi</h3>
          <p class="text-gray-400">
            Pair AirScales with your mobile device. Download the app and connect wirelessly.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-blue-600 text-white w-16 h-16 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
            3
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Monitor Loads in Real-Time</h3>
          <p class="text-gray-400">
            View live weight data from your phone. Track front and rear axle weights, get alerts, and stay compliant.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Mobile App Section -->
  <section id="app" class="bg-gray-800 py-20">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-8">Download the AirScales App</h2>
      <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
        Get the most out of your AirScales device with our mobile app. Available for iOS and Android.
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <div class="bg-gray-700 text-gray-500 px-8 py-4 rounded-lg text-lg font-semibold flex items-center gap-3 cursor-not-allowed">
          <i class="fab fa-google-play text-3xl"></i>
          <div class="text-left">
            <div class="text-xs text-gray-600">Coming Soon</div>
            <div>Google Play</div>
          </div>
        </div>
        <div class="bg-gray-700 text-gray-500 px-8 py-4 rounded-lg text-lg font-semibold flex items-center gap-3 cursor-not-allowed">
          <i class="fab fa-apple text-3xl"></i>
          <div class="text-left">
            <div class="text-xs text-gray-600">Coming Soon</div>
            <div>App Store</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-8">Ready to Get Started?</h2>
      <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
        Join professional truck drivers who trust AirScales for real-time load monitoring.
      </p>
      <a href="{{ path('product_details') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-12 py-4 rounded-lg text-xl font-semibold transition">
        <i class="fas fa-shopping-cart mr-2"></i>Order Your AirScales Today
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 border-t border-gray-700 py-12">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-xl font-bold text-white mb-4">AirScales</h3>
          <p class="text-gray-400">
            Real-time load monitoring for professional truck drivers.
          </p>
        </div>
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">Product</h4>
          <ul class="space-y-2">
            <li><a href="#features" class="text-gray-400 hover:text-blue-400 transition">Features</a></li>
            <li><a href="{{ path('product_details') }}" class="text-gray-400 hover:text-blue-400 transition">Product Details</a></li>
            <li><a href="#how-it-works" class="text-gray-400 hover:text-blue-400 transition">How It Works</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">Support</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">FAQ</a></li>
            <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">Contact Us</a></li>
            <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">Installation Guide</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-semibold text-white mb-4">Legal</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">Privacy Policy</a></li>
            <li><a href="#" class="text-gray-400 hover:text-blue-400 transition">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-700 mt-12 pt-8 text-center text-gray-400">
        <p>&copy; {{ "now"|date("Y") }} Beaker.ca - AirScales. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>
{% endblock %}
