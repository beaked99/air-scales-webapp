{% extends 'base.html.twig' %}

{% block title %}AirScales Product Details{% endblock %}

{% block body %}
  <!-- Product Header -->
  <section class="bg-gray-800 py-12">
    <div class="container mx-auto px-6">
      <div class="text-center">
        <h1 class="text-5xl font-bold text-white mb-4">AirScales Load Monitoring System</h1>
        <p class="text-xl text-gray-400">Professional-grade weight monitoring for semi trucks and trailers</p>
      </div>
    </div>
  </section>

  <!-- Product Details -->
  <section class="py-16">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <img src="{{ asset('images/airscales.png') }}" alt="AirScales Device" class="rounded-lg shadow-2xl w-full">
        </div>
        <div>
          <h2 class="text-3xl font-bold text-white mb-6">Product Overview</h2>
          <div class="space-y-4 text-gray-300">
            <p>
              The AirScales Load Monitoring System is a cutting-edge 12V device designed specifically for semi trucks and trailers equipped with air suspension systems.
            </p>
            <p>
              Using precision pressure sensors connected to your air bags, AirScales provides real-time weight readings directly to your mobile device via Bluetooth or WiFi connectivity.
            </p>
            <p>
              Whether you're hauling freight across the country or managing a local fleet, AirScales helps you stay compliant with weight regulations and avoid costly overload fines.
            </p>
          </div>

          <div class="mt-8 bg-gray-800 rounded-lg p-6 border border-gray-700">
            <h3 class="text-xl font-bold text-white mb-4">Key Specifications</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Power:</strong> 12V DC (standard truck electrical system)</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Connectivity:</strong> Bluetooth Low Energy (BLE) and WiFi</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Sensor Inputs:</strong> 1 or 2 pressure sensor channels</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Display:</strong> Real-time mobile app integration (iOS & Android)</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Installation:</strong> Plug-and-play, no complex wiring</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
                <span><strong>Durability:</strong> Built for harsh trucking environments</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Configuration Options -->
  <section class="bg-gray-800 py-16">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center text-white mb-12">Choose Your Configuration</h2>
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Single Sensor Configuration -->
        <div class="bg-gray-900 rounded-lg p-8 border-2 border-gray-700 hover:border-blue-500 transition">
          <div class="text-center mb-6">
            <div class="text-blue-400 text-5xl mb-4">
              <i class="fas fa-gauge"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">Single Sensor</h3>
            <p class="text-gray-400">Monitor one axle group</p>
          </div>

          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">One pressure sensor input</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Ideal for single axle monitoring</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Full mobile app functionality</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Bluetooth/WiFi connectivity</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Real-time weight display</span>
            </div>
          </div>

          <div class="bg-gray-800 rounded-lg p-4 mb-6">
            <div class="text-center">
              <div class="text-gray-400 text-sm mb-1">Starting at</div>
              <div class="text-3xl font-bold text-white">Contact for Pricing</div>
            </div>
          </div>

          <a href="{{ path('order_create', {type: 'single'}) }}" class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition text-center">
            <i class="fas fa-shopping-cart mr-2"></i>Order Now
          </a>
        </div>

        <!-- Dual Sensor Configuration -->
        <div class="bg-gray-900 rounded-lg p-8 border-2 border-blue-500 hover:border-blue-400 transition relative">
          <div class="absolute top-4 right-4 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full">
            POPULAR
          </div>

          <div class="text-center mb-6">
            <div class="text-blue-400 text-5xl mb-4">
              <i class="fas fa-gauge-high"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">Dual Sensor</h3>
            <p class="text-gray-400">Monitor front & rear axle groups</p>
          </div>

          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Two pressure sensor inputs</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Monitor front & rear axles simultaneously</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Independent weight readings per axle</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Full mobile app functionality</span>
            </div>
            <div class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span class="text-gray-300">Complete load distribution visibility</span>
            </div>
          </div>

          <div class="bg-gray-800 rounded-lg p-4 mb-6">
            <div class="text-center">
              <div class="text-gray-400 text-sm mb-1">Starting at</div>
              <div class="text-3xl font-bold text-white">Contact for Pricing</div>
            </div>
          </div>

          <a href="{{ path('order_create', {type: 'dual'}) }}" class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition text-center">
            <i class="fas fa-shopping-cart mr-2"></i>Order Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-16">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center text-white mb-12">What's Included</h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-box"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">AirScales Device</h3>
          <p class="text-gray-400">Main control unit with WiFi/Bluetooth</p>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-plug"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Power Cable</h3>
          <p class="text-gray-400">12V connection harness with fuse protection</p>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-gauge-simple"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Pressure Sensors</h3>
          <p class="text-gray-400">1 or 2 sensors based on your configuration</p>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-screwdriver-wrench"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Installation Kit</h3>
          <p class="text-gray-400">Mounting hardware and wiring accessories</p>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-book"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Quick Start Guide</h3>
          <p class="text-gray-400">Step-by-step installation instructions</p>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 text-center">
          <div class="text-blue-400 text-4xl mb-4">
            <i class="fas fa-mobile-screen-button"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Mobile App Access</h3>
          <p class="text-gray-400">Free download for iOS and Android</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Subscription Info -->
  <section class="bg-gray-800 py-16">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-8">Subscription Plans</h2>
      <p class="text-xl text-gray-400 mb-12 max-w-3xl mx-auto">
        AirScales requires an active subscription for cloud features, data storage, and mobile app access.
      </p>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-gray-900 rounded-lg p-8 border border-gray-700">
          <h3 class="text-2xl font-bold text-white mb-4">Monthly Plan</h3>
          <div class="text-4xl font-bold text-blue-400 mb-6">$5<span class="text-xl text-gray-400">/month</span></div>
          <ul class="space-y-3 text-gray-300 text-left mb-8">
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Real-time data streaming</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Cloud data storage</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Mobile app access</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Historical data & reports</span>
            </li>
          </ul>
          {% if app.user %}
            <a href="{{ path('app_profile') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition">
              Manage Subscription
            </a>
          {% else %}
            <a href="{{ path('app_register') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition">
              Get Started
            </a>
          {% endif %}
        </div>

        <div class="bg-gray-900 rounded-lg p-8 border-2 border-blue-500 relative">
          <div class="absolute top-4 right-4 bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full">
            SAVE $10/YEAR
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Yearly Plan</h3>
          <div class="text-4xl font-bold text-blue-400 mb-6">$50<span class="text-xl text-gray-400">/year</span></div>
          <ul class="space-y-3 text-gray-300 text-left mb-8">
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Everything in Monthly plan</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Priority support</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>Early access to new features</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-green-400 mr-3 mt-1"></i>
              <span>2 months free (vs monthly)</span>
            </li>
          </ul>
          {% if app.user %}
            <a href="{{ path('app_profile') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition">
              Manage Subscription
            </a>
          {% else %}
            <a href="{{ path('app_register') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition">
              Get Started
            </a>
          {% endif %}
        </div>
      </div>
      <div class="bg-green-900/30 border border-green-500 rounded-lg p-4 max-w-2xl mx-auto mt-8">
        <p class="text-green-400 font-semibold">
          <i class="fas fa-gift mr-2"></i>New device purchase includes 6 months free subscription for 1 user!
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Order?</h2>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Contact us to discuss your specific needs and get a custom quote for your AirScales system.
      </p>
      <button onclick="alert('Contact sales@beaker.ca for pricing and orders!')" class="bg-blue-600 hover:bg-blue-700 text-white px-12 py-4 rounded-lg text-xl font-semibold transition">
        <i class="fas fa-envelope mr-2"></i>Contact Sales
      </button>
    </div>
  </section>
{% endblock %}
