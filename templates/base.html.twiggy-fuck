<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="manifest" href="/app/manifest.webmanifest">
        <link rel="icon" href="/app/icon-192.png">
        <link rel="apple-touch-icon" href="/app/icon-192.png">
        <meta name="theme-color" content="#1f7a1f">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <link rel="icon" href="/app/icon-192.png">


<script>
  if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('/app/sw.js').then(reg => {
      console.log('Service Worker registered', reg);

      reg.onupdatefound = () => {
        const newWorker = reg.installing;
        console.log('New service worker foundâ€¦');

        newWorker.onstatechange = () => {
          if (newWorker.state === 'installed') {
            if (navigator.serviceWorker.controller) {
              // ðŸš¨ A new version of the app is available
              console.log('New version available. Reloading...');
              window.location.reload(); // ðŸ” Force refresh to load new files
            } else {
              // First install â€” nothing to do
              console.log('App is ready for offline use.');
            }
          }
        };
      };
    }).catch(err => {
      console.error('Service Worker registration failed:', err);
    });
  }
</script>



        {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('assets/app/index.js') }}" type="module"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="navbar-nav me-auto mb-2 mb-lg-0">
                        <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                    </li>
                {% endif %}
            </ul>
        {% endblock %}
    </body>
</html>