{% extends 'base.html.twig' %}

{% block title %}Create Account - AirScales{% endblock %}

{% block body %}
  <section class="container mx-auto px-6 py-12 max-w-md">
    <div class="bg-gray-800 rounded-lg border border-gray-700 p-8">
      <h1 class="text-3xl font-bold text-white mb-2 text-center">Create Your Account</h1>
      <p class="text-gray-400 text-center mb-8">Join AirScales to start monitoring your loads</p>

      {% if error %}
        <div class="bg-red-900/30 border border-red-500 rounded-lg p-4 mb-6">
          <div class="flex items-start">
            <i class="fas fa-exclamation-circle text-red-400 mr-3 mt-1"></i>
            <div class="text-red-400">{{ error }}</div>
          </div>
        </div>
      {% endif %}

      <form method="post" action="{{ path('app_register') }}">
        <div class="space-y-4">
          <!-- First Name -->
          <div>
            <label for="first_name" class="block text-gray-300 text-sm font-semibold mb-2">
              First Name
            </label>
            <input
              type="text"
              id="first_name"
              name="first_name"
              class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="John"
              required
            >
          </div>

          <!-- Last Name -->
          <div>
            <label for="last_name" class="block text-gray-300 text-sm font-semibold mb-2">
              Last Name
            </label>
            <input
              type="text"
              id="last_name"
              name="last_name"
              class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="Doe"
              required
            >
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-gray-300 text-sm font-semibold mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="you@example.com"
              required
            >
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-gray-300 text-sm font-semibold mb-2">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="At least 8 characters"
              required
            >
          </div>

          <!-- Confirm Password -->
          <div>
            <label for="password_confirm" class="block text-gray-300 text-sm font-semibold mb-2">
              Confirm Password
            </label>
            <input
              type="password"
              id="password_confirm"
              name="password_confirm"
              class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="Confirm your password"
              required
            >
          </div>
        </div>

        <!-- Terms Agreement -->
        <div class="mt-6">
          <p class="text-gray-400 text-sm">
            By creating an account, you agree to our
            <a href="{{ path('terms_of_service') }}" class="text-blue-400 hover:text-blue-300">Terms of Service</a>
            and
            <a href="{{ path('privacy_policy') }}" class="text-blue-400 hover:text-blue-300">Privacy Policy</a>.
          </p>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full mt-6 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition"
        >
          <i class="fas fa-user-plus mr-2"></i>Create Account
        </button>
      </form>

      <!-- Already have account -->
      <div class="mt-6 text-center">
        <p class="text-gray-400">
          Already have an account?
          <a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300 font-semibold">Sign In</a>
        </p>
      </div>
    </div>
  </section>
{% endblock %}
