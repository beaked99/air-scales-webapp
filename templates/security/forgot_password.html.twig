{% extends 'base.html.twig' %}

{% block title %}Forgot Password - AirScales{% endblock %}

{% block body %}
<div class="bg-gray-900 text-gray-100 min-h-screen flex flex-col">
  <!-- Navigation -->
  <nav class="bg-gray-800 border-b border-gray-700">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <a href="{{ path('app_homepage') }}" class="text-2xl font-bold text-blue-400">AirScales</a>
        <div class="flex items-center gap-4">
          <a href="{{ path('app_login') }}" class="text-gray-300 hover:text-blue-400 transition">
            <i class="fas fa-sign-in-alt mr-2"></i>Sign In
          </a>
          <a href="{{ path('app_register') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
            <i class="fas fa-user-plus mr-2"></i>Sign Up
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Forgot Password Form -->
  <div class="flex-1 flex items-center justify-center px-6 py-12">
    <div class="max-w-md w-full">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-2">Forgot Password</h1>
        <p class="text-gray-400">Enter your email and we'll send you a reset link</p>
      </div>

      <!-- Success Message -->
      {% if success %}
        <div class="bg-green-900/30 border border-green-500 rounded-lg p-4 mb-6">
          <div class="flex items-start">
            <i class="fas fa-check-circle text-green-400 mr-3 mt-1"></i>
            <div class="text-green-400">
              If an account exists with that email, we've sent password reset instructions. Please check your inbox.
            </div>
          </div>
        </div>
        <div class="text-center mt-6">
          <a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300">
            <i class="fas fa-arrow-left mr-2"></i>Back to Sign In
          </a>
        </div>
      {% else %}
        <!-- Error Message -->
        {% if error %}
          <div class="bg-red-900/30 border border-red-500 rounded-lg p-4 mb-6">
            <div class="flex items-start">
              <i class="fas fa-exclamation-circle text-red-400 mr-3 mt-1"></i>
              <div class="text-red-400">{{ error }}</div>
            </div>
          </div>
        {% endif %}

        <!-- Form Card -->
        <div class="bg-gray-800 rounded-lg shadow-2xl border border-gray-700 p-8">
          <form method="post">
            <!-- Honeypot field -->
            <input type="text" name="website" value="" style="position:absolute;left:-5000px" tabindex="-1" autocomplete="off" aria-hidden="true">

            <div class="space-y-6">
              <!-- Email Field -->
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-300 mb-2">
                  <i class="fas fa-envelope mr-2 text-blue-400"></i>Email Address
                </label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                  placeholder="you@example.com"
                  required
                  autofocus
                >
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition transform hover:scale-105"
              >
                <i class="fas fa-paper-plane mr-2"></i>Send Reset Link
              </button>
            </div>
          </form>

          <!-- Back to Login -->
          <div class="mt-6 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300 text-sm">
              <i class="fas fa-arrow-left mr-2"></i>Back to Sign In
            </a>
          </div>
        </div>
      {% endif %}

      <!-- Additional Info -->
      <div class="mt-8 text-center text-gray-400 text-sm">
        <p>
          <i class="fas fa-shield-alt mr-2 text-green-400"></i>
          Your connection is secure and encrypted
        </p>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-800 border-t border-gray-700 py-6">
    <div class="container mx-auto px-6 text-center text-gray-400 text-sm">
      <p>&copy; {{ "now"|date("Y") }} Beaker.ca - AirScales. All rights reserved.</p>
    </div>
  </footer>
</div>
{% endblock %}
